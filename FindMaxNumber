import java.util.Arrays;

public class FindMaxNumber2 {
    public static void main(String[] args) {
        int[] array = {5, 9, 1};
        int maxNumber = findMaxNumber(array, array[0]);
        System.out.println("maxNumber: " + maxNumber);
    }

    static int findMaxNumber(int[] array, int maxNumber) {
        if (array.length == 0) {
            return maxNumber;
        }

        if (array[0] > maxNumber) {
            maxNumber = array[0];
        }
        array = Arrays.copyOfRange(array, 1, array.length);
        return findMaxNumber(array, maxNumber);

    }
}
